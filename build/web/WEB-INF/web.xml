<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controladores.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controladores.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroCliente</servlet-name>
        <servlet-class>Controladores.RegistroCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroDireccion</servlet-name>
        <servlet-class>Controladores.RegistroDireccion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminaDireccion</servlet-name>
        <servlet-class>Controladores.EliminaDireccion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificaCliente</servlet-name>
        <servlet-class>Controladores.ModificaCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregaProductos</servlet-name>
        <servlet-class>Controladores.AgregaProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarProductoCarrito</servlet-name>
        <servlet-class>Controladores.EliminarProductoCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistraPedido</servlet-name>
        <servlet-class>Controladores.RegistraPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarEstadoPedido</servlet-name>
        <servlet-class>Controladores.ModificarEstadoPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroCliente</servlet-name>
        <url-pattern>/RegistroCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroDireccion</servlet-name>
        <url-pattern>/RegistroDireccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminaDireccion</servlet-name>
        <url-pattern>/EliminaDireccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificaCliente</servlet-name>
        <url-pattern>/ModificaCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregaProductos</servlet-name>
        <url-pattern>/AgregaProductos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarProductoCarrito</servlet-name>
        <url-pattern>/EliminarProductoCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistraPedido</servlet-name>
        <url-pattern>/RegistraPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarEstadoPedido</servlet-name>
        <url-pattern>/ModificarEstadoPedido</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
